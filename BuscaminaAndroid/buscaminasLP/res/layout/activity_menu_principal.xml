<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#AAC1E2" >
    
    <LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="2"
	    android:gravity="center">
    	<TextView  
			android:id="@+id/txtBuscamina"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content" 
	    	android:gravity="center"
	    	android:text="BUSCAMINAS"
	    	android:textStyle="bold"
	    	android:textSize="25sp"
	    	android:textColor="#000000"
	    />
    	<TextView  
			android:id="@+id/txPerfil"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content" 
	    	android:gravity="center"
	    	android:text="PROYECTO"
	    	android:textStyle="bold"
	    	android:textColor="#000000"
	    />
    </LinearLayout>

    <TableLayout 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
	>
        <TableRow
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="20px"
			android:paddingRight="20px"
			android:paddingBottom = "10px"
		>
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingRight="20px"
		   	>
                <Button
        			android:id="@+id/Jugar"
        			android:layout_width="200dp"
			        android:layout_height="200dp"
			        android:layout_weight="1"
			        android:background="@drawable/play"
			    />
                
                <TextView  
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#000000"
				  	android:text="Nuevo Juego"
			  	/>
            </LinearLayout>
            
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="20px"
		   	>
                <Button
			        android:id="@+id/Score"
			        android:layout_width="200dp"
			        android:layout_height="200dp"
			        android:layout_weight="1"
			        android:background="@drawable/puntaje"
			        
		        />
                 <TextView  
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#000000"
				  	android:text="Puntaje"
			  	/>
            </LinearLayout>
        </TableRow>
        
        <TableRow
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="20px"
			android:paddingRight="20px"
			android:paddingTop = "20px"
			android:paddingBottom = "10px"
		>
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingRight="20px"
		   	>
                <Button
                    android:id="@+id/Instrucciones"
			    	android:layout_width="150dp" 
			    	android:layout_height="150dp" 
			    	android:layout_weight="1" 
			    	android:padding="20px"
			    	android:background="@drawable/instrucciones" 
		    	/>
                <TextView  
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#000000"
				  	android:text="Instrucciones"
			  	/>
            </LinearLayout>
            
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="20px"
		   	>
                <Button
			        android:id="@+id/Creditos"
			        android:layout_width="150dp"
			        android:layout_height="150dp"
			        android:layout_weight="1"
			        android:background="@drawable/credito"  
			    />
                <TextView  
				  	android:layout_width="fill_parent" 
				  	android:layout_height="wrap_content" 
				  	android:gravity="center"
				  	android:textStyle="bold"
				  	android:textColor="#000000"
				  	android:text="Creditos"
			  	/>
            </LinearLayout>
        </TableRow>
        
    </TableLayout>
      
    <TextView  	
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:gravity="center"
    />
    <TextView  
		android:id="@+id/txtEspol"		
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:gravity="center"
    	android:textColor="#000000"    	
    	android:textStyle="bold"
    	android:text="ESPOL"
    />
    <TextView  	
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:gravity="center"
    />
    
    
</LinearLayout>
