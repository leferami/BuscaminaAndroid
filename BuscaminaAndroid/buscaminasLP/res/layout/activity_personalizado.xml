<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_play">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_weight="1">

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20px"
			android:paddingRight="20px"
            android:paddingBottom = "10px">
            
            <LinearLayout
                android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center">
                <TextView
                    android:id="@+id/txtFilas"
                    android:layout_width="450dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="@string/no_filas"
                    android:textColor="#000000" />
            </LinearLayout>
            
             <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="20px"
			    android:paddingRight="30px">
	            <NumberPicker
	                android:gravity="center"
	                android:id="@+id/npFilas"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1" />
	   		</LinearLayout>
        </TableRow>

        <TableRow
            android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="20px"
			android:paddingRight="20px"
			android:paddingTop = "20px"
			android:paddingBottom = "10px">

            <LinearLayout
               android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center">
                <TextView
                    android:id="@+id/txtColumnas"
                    android:layout_width="450dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="@string/no_columnas"
                    android:textColor="#000000"/>
            </LinearLayout>
            
            <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="20px"
			    android:paddingRight="30px">
	            <NumberPicker
	                android:id="@+id/npColumnas"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:gravity="center"/>
	   		</LinearLayout>

        </TableRow>

        <TableRow
            android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="20px"
			android:paddingRight="20px"
			android:paddingTop = "20px"
			android:paddingBottom = "10px">

            <LinearLayout
                android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center" >
                <TextView
                    android:id="@+id/txtMinas"
                    android:layout_width="450dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="@string/no_minas"
                    android:textColor="#000000"/>
            </LinearLayout>
            
             <LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:paddingLeft="20px"
			    android:paddingRight="30px">
	            <NumberPicker
	                android:id="@+id/npMinas"
	                android:gravity="center"
	                android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"/>
	     	 </LinearLayout>
	     	 
        </TableRow>
	</TableLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="570sp"
        android:orientation="vertical" 
        android:gravity="center"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/animacion_siguiente"
            android:gravity="center"/>
    </LinearLayout>   
    
</LinearLayout>
